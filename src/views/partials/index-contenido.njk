<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Desplazamiento Horizontal</title>
  </head>
  <body>
    <div class="contenedor">
      <!-- Contenido adicional puede ir aquí -->
      <div class="fondo1" id="miDiv">
        <!-- Contenido adicional puede ir aquí -->
        <button onclick="desplazar()" class="enter">ENTER</button>
      </div>

    </div>

    <script>
      function desplazar() {
        var miDiv = document.getElementById('miDiv');
        miDiv.style.transition = 'margin-right 0.5s ease';
        miDiv.style.marginRight = '800px'; // Modifica el valor según sea necesario
      }
    </script>
  </body>
</html>