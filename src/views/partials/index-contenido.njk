<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Desplazamiento Horizontal</title>
  </head>
  <body>
    <div class="contenedor">
      <!-- Contenido adicional puede ir aquí -->
      <div class="fondo1" id="miDiv">
        <!-- Contenido adicional puede ir aquí -->
      </div>
      <button onclick="desplazar()">Desplazar</button>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        function desplazar() {
          var miDiv = document.getElementById('miDiv');
          miDiv.style.transition = 'margin-left 0.5s ease'; // Agregamos la transición aquí
          miDiv.style.marginLeft = '200px'; // Modifica el valor según sea necesario
        }
      });
    </script>
  </body>
</html>