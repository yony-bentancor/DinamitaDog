{% extends "master.njk" %}

{% block main %}
<body>
  <div id="contenedor-carrito">  
    <div id="slide-carrito"> 
      <div id="carritoInfo"> 
        <div class="row">
          <div class="col-12"> 
            <h5>INICIO DE SESIÓN</h5>
          </div>
        </div>
        <div class="row">
          <div class="col-3"> 
            <div>{{ userRes.username }}</div>
          </div>
          <div class="col-9"> 
            <form class="form" method="post" action="/session/admin">
              <div class="form-group">
                <label for="username" class="form-label">Usuario</label>
                <input type="text" name="username" value="{{ username }}" class="form-control" required="true" />
              </div>
              <div class="form-group">
                <label for="password" class="form-label">Contraseña</label>
                <input type="password" name="password" value="{{ password }}" class="form-control" required="true" />
              </div>
              <button type="submit" class="btn btn-success">Iniciar sesión</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>  
{% endblock %}